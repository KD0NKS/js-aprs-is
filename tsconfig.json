{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "esnext",
        "noImplicitAny": true,
        "removeComments": true,
        "allowJs": false,
        "preserveConstEnums": true,
        "outDir": "lib/",
        "declaration": true,
        "sourceMap": true
    },
    "include": [
        "src/IS.ts"
    ],
    "exclude": [ "bin", "node_modules", "lib" ],
    "atom": { "rewriteTsconfig": false }
}