{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "esnext",
        "noImplicitAny": true,
        "removeComments": true,
        "allowJs": false,
        "preserveConstEnums": true,
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        
        
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "noEmitOnError": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [ "bin", "node_modules", "dist" ]
}